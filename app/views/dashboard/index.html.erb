<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-4">Dashboard</h1>

  <%= form_tag({controller: "dashboard", action: "generate_csv", format: "csv"}, method: "get", class: "flex flex-col md:flex-row gap-4") do %>
    <div class="flex flex-col">
      <%= label_tag "start_date", "Start Date:", class: "mb-2 font-bold" %>
      <%= date_field_tag "start_date", nil, class: "p-2 border border-gray-400 rounded" %>
    </div>

    <div class="flex flex-col">
      <%= label_tag "end_date", "End Date:", class: "mb-2 font-bold" %>
      <%= date_field_tag "end_date", nil, class: "p-2 border border-gray-400 rounded" %>
    </div>

    <div class="flex flex-col">
      <%= label_tag "report_type", "Report Type:", class: "mb-2 font-bold" %>
      <%= select_tag "report_type", options_for_select([["Order", "order"], ["Bill", "bill"], ["Receipt", "receipt"]]), class: "p-2 border border-gray-400 rounded" %>
    </div>

    <%= submit_tag "Generate CSV", class: "bg-blue-500 text-white font-bold py-2 px-4 rounded mt-4 md:mt-0" %>
  <% end %>

  <div class="my-8">
    <h2 class="text-xl font-bold mb-4">Today's Earnings</h2>
    <p class="text-2xl font-bold">RS. <%= number_with_precision(@todays_earnings, precision: 2)  %></p>
  </div>
</div>
